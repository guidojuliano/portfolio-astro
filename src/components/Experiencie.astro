---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<ol class="relative border-s border-gray-200 dark:border-gray-700 ml-3 pt-4">
  <li class="mb-10 ms-6">
    <span
      class="absolute flex items-center justify-center w-6 h-6 bg-red-200 rounded-full -start-3 ring-8 ring-white ring-opacity-20 dark:ring-gray-900 dark:bg-red-900"
    >
      <svg
        class="w-2.5 h-2.5 text-red-800 dark:text-blue-300"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path
          d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
        ></path>
      </svg>
    </span>

    <h3
      class="flex items-center mb-1 text-lg font-semibold text-yellow-200/90 pl-2"
    >
      {t("experience.job")}
      <span
        class="bg-fuchsia-200 text-fuchsia-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ms-3"
        >Current</span
      >
    </h3>
    <time
      class="block mb-2 text-sm font-normal leading-none text-gray-300 dark:text-gray-500 pl-2"
      >{t("experience.company")} | {t("experience.duration")}</time
    >
    <p
      class="mb-4 text-base font-normal text-gray-300 dark:text-gray-400 pl-2 text-pretty"
    >
      {t("experience.description")}
    </p>
  </li>
  <li class="mb-10 ms-6">
    <span
      class="absolute flex items-center justify-center w-6 h-6 bg-red-200 rounded-full -start-3 ring-8 ring-white ring-opacity-20 dark:ring-gray-900 dark:bg-purple-900"
    >
      <svg
        class="w-2.5 h-2.5 text-red-800 dark:text-blue-300"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path
          d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
        ></path>
      </svg>
    </span>
    <h3 class="mb-1 text-lg font-semibold text-yellow-200/90 pl-2">
      {t("experience.job2")}
    </h3>
    <time
      class="block mb-2 text-sm font-normal leading-none text-gray-300 dark:text-gray-500 pl-2"
      >{t("experience.company2")} | {t("experience.duration2")}</time
    >
    <p
      class="text-base font-normal text-gray-300 dark:text-gray-400 pl-2 text-pretty"
    >
      {t("experience.description2")}
    </p>
  </li>
</ol>
